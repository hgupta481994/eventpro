
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

  <header class="w3-container w3-teal">
    <h1>Log in</h1>
  </header>

  <div class="w3-container w3-half w3-margin-top">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=> {:class=> "w3-container w3-card-4"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w3-input", required: true,style: "width:90%" %>
        <%= f.label :email %><br />
      </p>
      <p>
        <%= f.password_field :password, autocomplete: "current-password", class: "w3-input", required: true,style: "width:90%"  %>
        <%= f.label :password %><br />
      </p>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <p>
        <div class="actions">
          <%= f.submit "Log in",class: "w3-button w3-section w3-teal w3-ripple" %>
        </div>
      </p>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</body>
</html> 

